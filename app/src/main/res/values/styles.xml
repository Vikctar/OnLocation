<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/ONLocation_blue</item>
        <item name="colorPrimaryDark">@color/ONLocation_dark_blue</item>
    </style>

    <!-- Main activity theme -->
    <style name="MainActivityTheme" parent="AppTheme">
        <item name="actionBarStyle">@style/ActionBar.Solid.ONLocation.NoTitle</item>
    </style>

    <!-- Main activity action bar styles -->
    <style name="ActionBar.Solid.ONLocation.NoTitle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="displayOptions">useLogo|showHome</item>
        <item name="logo">@mipmap/ic_launcher</item>
    </style>

    <style name="Theme.Onlocation" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarItemBackground">@drawable/selectable_background_onlocation</item>
        <item name="popupMenuStyle">@style/PopupMenu.Onlocation</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Onlocation</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Onlocation</item>
        <item name="actionDropDownStyle">@style/DropDownNav.Onlocation</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.Onlocation</item>
        <item name="actionModeBackground">@drawable/cab_background_top_onlocation</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom_onlocation</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Onlocation</item>

        <!-- Light.DarkActionBar specific -->
        <item name="actionBarWidgetTheme">@style/Theme.Onlocation.Widget</item>

    </style>

    <style name="ActionBar.Solid.Onlocation" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@drawable/ab_solid_onlocation</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_onlocation</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_onlocation</item>
        <item name="progressBarStyle">@style/ProgressBar.Onlocation</item>
    </style>

    <style name="ActionBar.Transparent.Onlocation" parent="@style/Widget.AppCompat.ActionBar">
        <item name="background">@drawable/ab_transparent_onlocation</item>
        <item name="progressBarStyle">@style/ProgressBar.Onlocation</item>
    </style>

    <style name="PopupMenu.Onlocation" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_onlocation</item>
    </style>

    <style name="DropDownListView.Onlocation" parent="@style/Widget.AppCompat.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_onlocation</item>
    </style>

    <style name="ActionBarTabStyle.Onlocation" parent="@style/Widget.AppCompat.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_onlocation</item>
    </style>

    <style name="DropDownNav.Onlocation" parent="@style/Widget.AppCompat.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_background_ab_onlocation</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_onlocation</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_onlocation</item>
    </style>

    <style name="ProgressBar.Onlocation" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_onlocation</item>
    </style>

    <style name="ActionButton.CloseMode.Onlocation" parent="@style/Widget.AppCompat.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_onlocation</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Onlocation.Widget" parent="@style/Theme.AppCompat">
        <item name="popupMenuStyle">@style/PopupMenu.Onlocation</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Onlocation</item>
    </style>


</resources>
